import { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Card, CardContent } from "@/components/ui/card";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { Alert, AlertDescription } from "@/components/ui/alert";
import { Loader2, Search, ArrowLeft, ClipboardList, PenLine, CheckCircle, LogIn, AlertCircle } from "lucide-react";
import { toast } from "sonner";
import EmployeeProfileCard from "@/components/employee/EmployeeProfileCard";
import EvaluationCard from "@/components/evaluation/EvaluationCard";
import EvaluationForm from "@/components/evaluation/EvaluationForm";

export default function Evaluate() {
  const urlParams = new URLSearchParams(window.location.search);
  const codeFromUrl = urlParams.get("code")?.toUpperCase() || "";
  
  const [accessCode, setAccessCode] = useState(codeFromUrl);
  const [searchCode, setSearchCode] = useState(codeFromUrl);
  const [submitted, setSubmitted] = useState(false);
  const [user, setUser] = useState(null);
  const [isAuthenticated, setIsAuthenticated] = useState(false);
  const [authLoading, setAuthLoading] = useState(true);
  const queryClient = useQueryClient();

  useEffect(() => {
    const checkAuth = async () => {
      const auth = await base44.auth.isAuthenticated();
      setIsAuthenticated(auth);
      if (auth) {
        const userData = await base44.auth.me();
        setUser(userData);
      }
      setAuthLoading(false);
    };
    checkAuth();
  }, []);

  // Get employer profile if authenticated
  const { data: employerProfile } = useQuery({
    queryKey: ["employerProfile", user?.id],
    queryFn: async () => {
      const profiles = await base44.entities.Employer.filter({ user_id: user.id });
      return profiles[0] || null;
    },
    enabled: !!user?.id
  });

  const { data: employee, isLoading: employeeLoading } = useQuery({
    queryKey: ["employee", searchCode],
    queryFn: async () => {
      if (!searchCode) return null;
      const employees = await base44.entities.Employee.filter({ access_code: searchCode });
      return employees[0] || null;
    },
    enabled: !!searchCode
  });

  const { data: evaluations = [], isLoading: evaluationsLoading } = useQuery({
    queryKey: ["evaluations", searchCode],
    queryFn: () => base44.entities.Evaluation.filter(
      { employee_access_code: searchCode },
      "-created_date"
    ),
    enabled: !!searchCode && !!employee
  });

  const submitEvaluationMutation = useMutation({
    mutationFn: (data) => base44.entities.Evaluation.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries(["evaluations", searchCode]);
      setSubmitted(true);
      toast.success("Evaluation submitted successfully!");
    }
  });

  const handleSearch = (e) => {
    e.preventDefault();
    if (accessCode.trim()) {
      setSearchCode(accessCode.trim().toUpperCase());
      setSubmitted(false);
    }
  };

  const stats = employee && evaluations.length > 0 ? {
    avgRating: evaluations.reduce((sum, e) => sum + e.overall_rating, 0) / evaluations.length,
    totalEvaluations: evaluations.length,
    recommendRate: Math.round((evaluations.filter(e => e.would_recommend).length / evaluations.length) * 100)
  } : null;

  const canSubmitEvaluation = isAuthenticated && employerProfile;

  // Success screen after submission
  if (submitted) {
    return (
      <div className="min-h-screen bg-slate-50 flex items-center justify-center p-4">
        <Card className="max-w-md w-full border-0 shadow-xl text-center">
          <CardContent className="p-8">
            <div className="w-16 h-16 mx-auto rounded-full bg-emerald-100 flex items-center justify-center mb-6">
              <CheckCircle className="w-8 h-8 text-emerald-600" />
            </div>
            <h2 className="text-2xl font-bold text-gray-900 mb-2">Thank You!</h2>
            <p className="text-gray-600 mb-6">
              Your evaluation for {employee?.full_name} has been submitted successfully.
            </p>
            <div className="space-y-3">
              <Button 
                variant="outline" 
                className="w-full"
                onClick={() => setSubmitted(false)}
              >
                View Profile
              </Button>
              <Link to={createPageUrl("EmployerDashboard")}>
                <Button variant="secondary" className="w-full">
                  Go to Dashboard
                </Button>
              </Link>
              <Link to={createPageUrl("Home")}>
                <Button variant="ghost" className="w-full">
                  <ArrowLeft className="w-4 h-4 mr-2" />
                  Back to Home
                </Button>
              </Link>
            </div>
          </CardContent>
        </Card>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-slate-50">
      {/* Header */}
      <div className="bg-white border-b sticky top-0 z-10">
        <div className="max-w-6xl mx-auto px-4 py-4">
          <div className="flex items-center justify-between">
            <Link to={createPageUrl("Home")} className="flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors">
              <ArrowLeft className="w-4 h-4" />
              <span className="text-sm font-medium">Home</span>
            </Link>
            
            <form onSubmit={handleSearch} className="flex items-center gap-2">
              <Input
                value={accessCode}
                onChange={(e) => setAccessCode(e.target.value.toUpperCase())}
                placeholder="Access code"
                className="w-32 md:w-40 text-center font-mono uppercase"
                maxLength={6}
              />
              <Button type="submit" size="sm" variant="secondary">
                <Search className="w-4 h-4" />
              </Button>
            </form>
          </div>
        </div>
      </div>

      <div className="max-w-6xl mx-auto px-4 py-8">
        {/* No code entered */}
        {!searchCode && (
          <div className="max-w-md mx-auto text-center py-20">
            <div className="w-16 h-16 mx-auto rounded-2xl bg-slate-100 flex items-center justify-center mb-6">
              <Search className="w-8 h-8 text-slate-400" />
            </div>
            <h2 className="text-2xl font-bold text-gray-900 mb-2">Enter Access Code</h2>
            <p className="text-gray-600 mb-8">
              Enter an employee's access code to view their profile and evaluations.
            </p>
            <form onSubmit={handleSearch} className="space-y-4">
              <Input
                value={accessCode}
                onChange={(e) => setAccessCode(e.target.value.toUpperCase())}
                placeholder="e.g., ABC123"
                className="text-center text-2xl font-mono tracking-widest h-14"
                maxLength={6}
              />
              <Button type="submit" className="w-full h-12" disabled={!accessCode.trim()}>
                Search
              </Button>
            </form>
          </div>
        )}

        {/* Loading */}
        {searchCode && employeeLoading && (
          <div className="flex justify-center py-20">
            <Loader2 className="w-8 h-8 animate-spin text-slate-400" />
          </div>
        )}

        {/* Not found */}
        {searchCode && !employeeLoading && !employee && (
          <div className="max-w-md mx-auto text-center py-20">
            <div className="w-16 h-16 mx-auto rounded-2xl bg-red-50 flex items-center justify-center mb-6">
              <Search className="w-8 h-8 text-red-400" />
            </div>
            <h2 className="text-2xl font-bold text-gray-900 mb-2">Profile Not Found</h2>
            <p className="text-gray-600 mb-6">
              No employee found with access code <span className="font-mono font-bold">{searchCode}</span>. Please check the code and try again.
            </p>
            <Button variant="outline" onClick={() => { setSearchCode(""); setAccessCode(""); }}>
              Try Another Code
            </Button>
          </div>
        )}

        {/* Employee found */}
        {employee && (
          <div className="grid lg:grid-cols-3 gap-8">
            <div className="lg:col-span-1">
              <EmployeeProfileCard 
                employee={employee} 
                stats={stats}
                showShareOptions={false}
              />
            </div>

            <div className="lg:col-span-2">
              <Tabs defaultValue="history" className="space-y-6">
                <TabsList className="bg-white shadow-sm border p-1">
                  <TabsTrigger value="history" className="gap-2">
                    <ClipboardList className="w-4 h-4" />
                    Evaluations ({evaluations.length})
                  </TabsTrigger>
                  <TabsTrigger value="submit" className="gap-2">
                    <PenLine className="w-4 h-4" />
                    Submit Evaluation
                  </TabsTrigger>
                </TabsList>

                <TabsContent value="history" className="space-y-4">
                  {evaluationsLoading ? (
                    <div className="flex justify-center py-12">
                      <Loader2 className="w-6 h-6 animate-spin text-gray-400" />
                    </div>
                  ) : evaluations.length === 0 ? (
                    <Card className="border-0 shadow-lg">
                      <CardContent className="py-16 text-center">
                        <ClipboardList className="w-12 h-12 mx-auto text-gray-300 mb-4" />
                        <h3 className="text-lg font-semibold text-gray-900">No evaluations yet</h3>
                        <p className="text-gray-500 mt-1">
                          Be the first to submit an evaluation for {employee.full_name}
                        </p>
                      </CardContent>
                    </Card>
                  ) : (
                    evaluations.map((evaluation) => (
                      <EvaluationCard 
                        key={evaluation.id} 
                        evaluation={evaluation}
                        showDetails={true}
                      />
                    ))
                  )}
                </TabsContent>

                <TabsContent value="submit">
                  {authLoading ? (
                    <div className="flex justify-center py-12">
                      <Loader2 className="w-6 h-6 animate-spin text-gray-400" />
                    </div>
                  ) : !isAuthenticated ? (
                    <Card className="border-0 shadow-lg">
                      <CardContent className="py-12 text-center">
                        <LogIn className="w-12 h-12 mx-auto text-gray-300 mb-4" />
                        <h3 className="text-lg font-semibold text-gray-900 mb-2">Login Required</h3>
                        <p className="text-gray-500 mb-6 max-w-sm mx-auto">
                          You must be logged in as a registered employer to submit evaluations.
                        </p>
                        <div className="space-y-3 max-w-xs mx-auto">
                          <Button 
                            className="w-full bg-emerald-600 hover:bg-emerald-700"
                            onClick={() => base44.auth.redirectToLogin(window.location.href)}
                          >
                            <LogIn className="w-4 h-4 mr-2" />
                            Login to Continue
                          </Button>
                          <Link to={createPageUrl("EmployerRegister")}>
                            <Button variant="outline" className="w-full">
                              Register as Employer
                            </Button>
                          </Link>
                        </div>
                      </CardContent>
                    </Card>
                  ) : !employerProfile ? (
                    <Card className="border-0 shadow-lg">
                      <CardContent className="py-12 text-center">
                        <AlertCircle className="w-12 h-12 mx-auto text-amber-500 mb-4" />
                        <h3 className="text-lg font-semibold text-gray-900 mb-2">Employer Profile Required</h3>
                        <p className="text-gray-500 mb-6 max-w-sm mx-auto">
                          You need to complete your employer registration before submitting evaluations.
                        </p>
                        <Link to={createPageUrl("EmployerRegister")}>
                          <Button className="bg-emerald-600 hover:bg-emerald-700">
                            Complete Registration
                          </Button>
                        </Link>
                      </CardContent>
                    </Card>
                  ) : (
                    <EvaluationForm
                      employee={employee}
                      employer={employerProfile}
                      onSubmit={(data) => submitEvaluationMutation.mutate(data)}
                      isSubmitting={submitEvaluationMutation.isPending}
                    />
                  )}
                </TabsContent>
              </Tabs>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}
