import { format } from "date-fns";
import { Card, CardContent, CardHeader } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Building2, Calendar, ThumbsUp, ThumbsDown, User } from "lucide-react";
import StarRating from "@/components/ui/StarRating";

const relationshipLabels = {
  manager: "Manager",
  colleague: "Colleague",
  client: "Client",
  direct_report: "Direct Report",
  other: "Other"
};

export default function EvaluationCard({ evaluation, showDetails = false }) {
  const avgRating = (
    (evaluation.technical_skills + 
     evaluation.communication + 
     evaluation.problem_solving + 
     evaluation.leadership) / 4
  ).toFixed(1);

  return (
    <Card className="group hover:shadow-lg transition-all duration-300 border-gray-100 overflow-hidden">
      <CardHeader className="pb-3">
        <div className="flex items-start justify-between">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 rounded-full bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center">
              <User className="w-5 h-5 text-slate-500" />
            </div>
            <div>
              <h3 className="font-semibold text-gray-900">{evaluation.evaluator_name}</h3>
              {evaluation.evaluator_role && (
                <p className="text-sm text-gray-500">{evaluation.evaluator_role}</p>
              )}
            </div>
          </div>
          <div className="flex items-center gap-2">
            {evaluation.relationship && (
              <Badge variant="secondary" className="text-xs font-medium">
                {relationshipLabels[evaluation.relationship]}
              </Badge>
            )}
            {evaluation.would_recommend !== undefined && (
              <div className={`p-1.5 rounded-full ${evaluation.would_recommend ? 'bg-emerald-50' : 'bg-red-50'}`}>
                {evaluation.would_recommend ? (
                  <ThumbsUp className="w-4 h-4 text-emerald-600" />
                ) : (
                  <ThumbsDown className="w-4 h-4 text-red-500" />
                )}
              </div>
            )}
          </div>
        </div>
      </CardHeader>
      
      <CardContent className="space-y-4">
        <div className="flex items-center gap-4 text-sm text-gray-500">
          {evaluation.evaluator_company && (
            <div className="flex items-center gap-1.5">
              <Building2 className="w-4 h-4" />
              <span>{evaluation.evaluator_company}</span>
            </div>
          )}
          <div className="flex items-center gap-1.5">
            <Calendar className="w-4 h-4" />
            <span>{format(new Date(evaluation.created_date), "MMM d, yyyy")}</span>
          </div>
        </div>

        <div className="flex items-center gap-2">
          <span className="text-sm font-medium text-gray-700">Overall:</span>
          <StarRating rating={evaluation.overall_rating} size="md" />
        </div>

        {showDetails && (
          <>
            <div className="grid grid-cols-2 gap-3 pt-2 border-t border-gray-100">
              <div className="space-y-2">
                <div className="flex items-center justify-between">
                  <span className="text-xs text-gray-500">Technical</span>
                  <StarRating rating={evaluation.technical_skills} size="sm" showValue={false} />
                </div>
                <div className="flex items-center justify-between">
                  <span className="text-xs text-gray-500">Communication</span>
                  <StarRating rating={evaluation.communication} size="sm" showValue={false} />
                </div>
                <div className="flex items-center justify-between">
                  <span className="text-xs text-gray-500">Problem Solving</span>
                  <StarRating rating={evaluation.problem_solving} size="sm" showValue={false} />
                </div>
              </div>
              <div className="space-y-2">
                <div className="flex items-center justify-between">
                  <span className="text-xs text-gray-500">Leadership</span>
                  <StarRating rating={evaluation.leadership} size="sm" showValue={false} />
                </div>
                <div className="flex items-center justify-between">
                  <span className="text-xs text-gray-500">Team Worker</span>
                  <StarRating rating={evaluation.team_worker || 0} size="sm" showValue={false} />
                </div>
                <div className="flex items-center justify-between">
                  <span className="text-xs text-gray-500">Punctuality</span>
                  <StarRating rating={evaluation.punctuality || 0} size="sm" showValue={false} />
                </div>
              </div>
            </div>

            {evaluation.strengths && (
              <div className="pt-3 border-t border-gray-100">
                <h4 className="text-xs font-semibold text-emerald-700 uppercase tracking-wide mb-1">Strengths</h4>
                <p className="text-sm text-gray-600">{evaluation.strengths}</p>
              </div>
            )}

            {evaluation.areas_for_improvement && (
              <div>
                <h4 className="text-xs font-semibold text-amber-700 uppercase tracking-wide mb-1">Areas for Growth</h4>
                <p className="text-sm text-gray-600">{evaluation.areas_for_improvement}</p>
              </div>
            )}

            {evaluation.comments && (
              <div className="pt-3 border-t border-gray-100">
                <h4 className="text-xs font-semibold text-gray-700 uppercase tracking-wide mb-1">Comments</h4>
                <p className="text-sm text-gray-600 italic">"{evaluation.comments}"</p>
              </div>
            )}

            {evaluation.work_period && (
              <p className="text-xs text-gray-400">Worked together: {evaluation.work_period}</p>
            )}
          </>
        )}
      </CardContent>
    </Card>
  );
}
